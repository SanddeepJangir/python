class Solution:
    def reverse(self, x: int) -> int:
        rev = 0
        mi, mx = -(2**31), 2**31 - 1
        while x:
            if rev < mi // 10 + 1 or rev > mx // 10:
                return 0
            y = x % 10
            if x < 0 and y > 0:
                y -= 10
            rev = rev * 10 + y
            x = (x - y) // 10
        return rev
