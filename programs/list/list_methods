# built-in methods:
# append(), extend(), clear(), copy(), insert(), pop(), remove(), reverse(), sort(), count(), index()
# Initial list
numbers = [10, 20, 30, 40]
print("Original List:", numbers)

# 1. append() – adds an element at the end of the list
numbers.append(50)
print("After append:", numbers)

# 2. extend() – adds multiple elements from another list
numbers.extend([60, 70])
print("After extend:", numbers)

# 3. insert() – inserts an element at a specific index
numbers.insert(2, 25)
print("After insert:", numbers)

# 4. pop() – removes and returns the last element (or by index)
removed_item = numbers.pop()
print("Popped item:", removed_item)
print("After pop:", numbers)

# 5. remove() – removes the first occurrence of a value
numbers.remove(25)
print("After remove:", numbers)

# 6. count() – returns how many times a value appears
count_20 = numbers.count(20)
print("Count of 20:", count_20)

# 7. index() – returns the index of a value
index_30 = numbers.index(30)
print("Index of 30:", index_30)

# 8. copy() – creates a shallow copy of the list
numbers_copy = numbers.copy()
print("Copied list:", numbers_copy)

# 9. reverse() – reverses the list order
numbers.reverse()
print("After reverse:", numbers)

# 10. sort() – sorts the list in ascending order
numbers.sort()
print("After sort:", numbers)

# 11. clear() – removes all elements from the list
numbers.clear()
print("After clear:", numbers)